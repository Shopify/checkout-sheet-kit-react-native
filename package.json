{
  "private": true,
  "name": "react-native-shopify-checkout-kit",
  "version": "0.0.1",
  "repository": "https://github.com/Shopify/checkout-kit-react-native",
  "author": "Shopify (https://github.com/Shopify/checkout-kit-react-native)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shopify/checkout-kit-react-native/issues"
  },
  "homepage": "https://github.com/Shopify/checkout-kit-react-native",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/package/src/index.d.ts",
  "react-native": "package/src/index",
  "source": "package/src/index.ts",
  "files": [
    "LICENSE",
    "README.md",
    "package.json",
    "package",
    "lib",
    "*.podspec",
    "!sample",
    "!package/ios/build",
    "!package/android/build",
    "!package/android/gradle",
    "!package/android/gradlew",
    "!package/android/gradlew.bat",
    "!package/android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/*.spec.*",
    "!**/*.test.*",
    "!**/.*"
  ],
  "workspaces": [
    "sample"
  ],
  "scripts": {
    "build": "bob build",
    "android": "react-native run-android",
    "ios": "react-native run-ios --simulator 'iPhone 14 Pro'",
    "lint": "npx typecheck && eslint .",
    "sample": "yarn workspace checkout-kit-react-native-sample",
    "start": "react-native start",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-native-dotenv": "^0.2.1",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-native-builder-bob": "^0.23.1",
    "react-native-dotenv": "^3.4.9",
    "react-test-renderer": "18.2.0",
    "turbo": "^1.10.16",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "useTabs": false
  },
  "keywords": [
    "react-native",
    "shopify",
    "checkout"
  ],
  "eslintConfig": {
    "root": true,
    "extends": "@react-native",
    "rules": {
      "@typescript-eslint/no-shadow": "off",
      "no-console": "error"
    }
  },
  "react-native-builder-bob": {
    "source": "package/src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
