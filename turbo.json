{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["modules/react-native-shopify-checkout-kit/lib/**/*"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "build:android": {
      "dependsOn": ["build", "lint"],
      "outputs": ["sample/android/app/build"]
    },
    "build:ios": {
      "dependsOn": ["build", "lint"],
      "outputs": ["sample/ios/build"]
    },
    "test:ios": {
      "dependsOn": ["build", "lint"],
      "outputs": []
    }
  }
}
